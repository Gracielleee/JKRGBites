<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InputRounded" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>

        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>

        <item name="passwordToggleTint">?attr/colorOnSurfaceVariant</item>
        <item name="endIconTint">?attr/colorOnSurfaceVariant</item>

        <item name="android:layout_height">@dimen/touchtarget_min</item>

    </style>

    <style name="ButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/touchtarget_min</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">@dimen/txt_headline</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="SpecialLinkText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>

    <style name="Widget.App.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <!--        <item name="android:background">@drawable/pill_button</item>-->
        <item name="chipBackgroundColor">@color/md_theme_primary</item>
        <item name="chipStrokeColor">@color/md_theme_outline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/md_theme_onPrimary</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:layout_height">40dp</item>
    </style>


</resources>