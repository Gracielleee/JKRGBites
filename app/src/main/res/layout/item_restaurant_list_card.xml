<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_flip_container"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:clickable="true"
    android:focusable="true">


    <!-- Front of the card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_front"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        tools:visibility="visible"
        app:cardBackgroundColor="@color/md_theme_primaryContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_standard">

            <ImageView
                android:id="@+id/restaurant_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="@null" />


            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/txt_subheading"
                android:textStyle="bold"
                tools:text="Restaurant Name" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_back"
        android:rotationY="180"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/md_theme_surface"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/spacing_standard">

            <TextView
                android:id="@+id/back_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_theme_primary"
                android:textSize="@dimen/txt_headline"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                tools:text="Restaurant Name (Back)" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@color/md_theme_outlineVariant" />

            <TextView
                android:id="@+id/back_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_theme_secondary"
                android:textSize="@dimen/txt_body"
                android:alpha="0.9"
                tools:text="Category: Italian, Seafood" />

            <TextView
                android:id="@+id/back_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/md_theme_secondary"
                android:textSize="@dimen/txt_body"
                android:alpha="0.9"
                tools:text="Cuisine: Pizza, Pasta" />

            <TextView
                android:id="@+id/back_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/md_theme_tertiary"
                android:textStyle="bold"
                android:textSize="@dimen/txt_label"
                tools:text="LEVEL: GROUND FLOOR" />

            <TextView
                android:id="@+id/back_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/md_theme_onSurfaceVariant"
                android:textSize="@dimen/txt_label"
                android:alpha="0.7"
                android:lineSpacingExtra="2dp"
                tools:text="Tags: Vegetarian, Halal, Outdoor Seating" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>

