<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <View
        android:id="@+id/picker_app_bar"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:background="@color/md_theme_primary"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_reset"
        android:layout_width="@dimen/touchtarget_min"
        android:layout_height="@dimen/touchtarget_min"
        android:contentDescription="@null"
        android:elevation="10dp"
        android:padding="11dp"
        app:srcCompat="@drawable/ic_reset"
        android:layout_marginStart="@dimen/spacing_standard"
        app:layout_constraintBottom_toBottomOf="@id/picker_app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/picker_app_bar"
        app:tint="?attr/colorOnPrimary" />

    <TextView
        android:id="@+id/picker_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picker      "
        android:textSize="@dimen/txt_headline"
        android:textColor="?attr/colorOnPrimary"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/picker_app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/picker_app_bar"
        app:layout_constraintVertical_bias="0.482" />

    <ImageView
        android:id="@+id/btn_shuffle"
        android:layout_width="@dimen/touchtarget_min"
        android:layout_height="@dimen/touchtarget_min"
        android:layout_marginEnd="4dp"
        android:contentDescription="@null"
        android:elevation="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@id/picker_app_bar"
        app:layout_constraintEnd_toStartOf="@id/btn_undo"
        app:layout_constraintTop_toTopOf="@id/picker_app_bar"
        app:srcCompat="@drawable/ic_shuffle"
        app:tint="?attr/colorOnPrimary" />

    <ImageView
        android:id="@+id/btn_undo"
        android:layout_width="@dimen/touchtarget_min"
        android:layout_height="@dimen/touchtarget_min"
        android:contentDescription="@null"
        android:elevation="10dp"
        android:padding="10dp"
        android:layout_marginEnd="@dimen/spacing_standard"
        app:layout_constraintBottom_toBottomOf="@id/picker_app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/picker_app_bar"
        app:srcCompat="@drawable/ic_undo"
        app:tint="?attr/colorOnPrimary" />

    <androidx.cardview.widget.CardView
        android:id="@+id/picker_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        app:cardBackgroundColor="?attr/colorSurfaceContainer"
        android:layout_marginBottom="@dimen/spacing_large"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/picker_app_bar">

        <FrameLayout
            android:id="@+id/picker_card_flip_container"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/picker_card_front"
                android:layout_width="match_parent"
                android:layout_height="391dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/picker_card_back_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/spacing_standard"
                android:background="?attr/colorPrimary"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/picker_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="@dimen/txt_headline"
                    android:textStyle="bold"
                    tools:text="Restaurant Name" />

                <TextView
                    android:id="@+id/picker_card_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="@dimen/txt_body"
                    android:maxLines="2"
                    tools:text="Cuisine â€¢ Category" />

                <TextView
                    android:id="@+id/picker_card_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="@dimen/txt_body"
                    android:maxLines="1"
                    tools:text="Tags: Vegetarian, Fast Food" />

                <TextView
                    android:id="@+id/picker_card_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="@dimen/txt_body"
                    tools:text="Location: SM North EDSA" />
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
